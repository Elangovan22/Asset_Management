<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.ams.web.loginwindow.ExtAppLoginWindow"
        extends="/com/haulmont/cuba/web/app/loginwindow/loginwindow.xml"
        messagesPack="com.company.ams.web.loginwindow">
    <layout>
        <vbox id="loginWrapper" stylename="image" >
            <vbox id="loginMainBox">
                <hbox id="loginTitleBox">
                    <label id="welcomeLabel"
                           value="Asset Management System"/>
                </hbox>
                <grid id="loginFormLayout">
                    <rows>
                        <row id="loginFieldRow">
                            <label id="loginFieldLabel"
                                   value="User Name"/>
                        </row>
                        <row id="passwordFieldRow">
                            <label id="passwordFieldLabel"
                                   value="Password"/>
                        </row>
                    </rows>
                </grid>
            </vbox>
        </vbox>
        <label id="poweredByLink"
               height="0px"
               htmlEnabled="false"
               visible="false"
               width="0px"/>
    </layout>
</window>
